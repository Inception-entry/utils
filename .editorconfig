# 如果发现 root=true，则将停止搜索。
root = true

[*]
# 编码格式
charset = utf-8
# 缩进方式 space tab
indent_style = tab
# 缩进大小
indent_size = 2
# 换行符类型 "lf" | "cr" | "crlf"
end_of_line = lf
# 是否让文件以空行结束
insert_final_newline = true
# 是否删除行尾空格
trim_trailing_whitespace = true

# 额外配置
[{src/**,vue.config.js}]
indent_size = 2
